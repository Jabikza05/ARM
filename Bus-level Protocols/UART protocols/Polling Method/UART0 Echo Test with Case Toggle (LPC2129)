#include<lpc21xx.h>


void uart0_config(void);
void uart0_TX(unsigned char);
unsigned char uart0_RX(void);



int main()
{ 
	unsigned char rxbytes;
	uart0_config();
	while(1)
	{
	rxbytes=uart0_RX();
	rxbytes=rxbytes^32;
	uart0_TX(rxbytes);

 }
}


void uart0_config(void)
{
  PINSEL0=0X05;
	U0LCR=0X83;
	U0DLL=97;
	U0DLM=0;
	U0LCR=0X03;
	
}


void uart0_TX(unsigned char d)
{
   while(((U0LSR>>5)&1)==0);
    U0THR=d;
	
}


unsigned char uart0_RX(void)
{
	while((U0LSR&1)==0);
  return U0RBR;
}


