#include<lpc21xx.h>

void uart0_config(void);
void uart0_TX(unsigned char);
void uart0_str(unsigned char*);
void uart0_int(int);
void uart0_float(float);


unsigned char ch ='A';
int main()
{
   uart0_config();
	 while(1)
	{
		 while(ch<='Z')
		uart0_TX(ch++);

  }
}

void uart0_config(void)
{
  PINSEL0=0x05;
	U0LCR=0X83;
	U0DLL=97;
	U0DLM=0;
	U0LCR=0X03;
}


void uart0_TX(unsigned char d)
{
  while(((U0LSR>>5)&1)==0);
  U0THR=d;

}



