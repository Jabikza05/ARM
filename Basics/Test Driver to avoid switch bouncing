#include <lpc21xx.h>
#include "lcd.h"
#define sw 20  // switch at P0.20

int main()
{ 
    int count=0;
    LCD_INITI();
    LCD_COMMAND(0X80);
    LCD_str("switch count:");

    while(1)
    {
        if(((IOPIN0>>sw)&1)==0)   
        {
					delay_ms(200);  // debounce
					count++;
					LCD_COMMAND(0XC0);
					LCD_int(count);
					while(((IOPIN0>>sw)&1)==0);
         }
    }
}


 
 
 







 
 
 
 
 
